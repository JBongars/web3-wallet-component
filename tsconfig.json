{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2018"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "types": ["@types/node", "jest"]
}
